    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Auto-generate UUIDs for testing",
                    "if (!pm.globals.get('userId')) {",
                    "    pm.globals.set('userId', pm.variables.replaceIn('{{$guid}}'));",
                    "}",
                    "if (!pm.globals.get('gameId')) {",
                    "    pm.globals.set('gameId', pm.variables.replaceIn('{{$guid}}'));",
                    "}",
                    "if (!pm.globals.get('guestId')) {",
                    "    pm.globals.set('guestId', pm.variables.replaceIn('{{$guid}}'));",
                    "}"
                ]
            }
        }
    ]
